{
    "name": "playerbook",
    "title": "PlayerBook",
    "version": "1.0.0",
    "description": "Rede Social Gamer",
    "author": "PlayerBook",
    "website": "https://playerbook.com.br/",
    "purchase": "https://playerbook.com.br/",
    "support": "https://catalditecnologia.com.br/",
    "scripts": {
        "dev": "gulp",
        "deploy": "gulp deploy",
        "production": "gulp production",
        "css-lint": "stylelint --syntax scss \"src/css/**/*.scss\"",
        "css-lint-fix": "stylelint --fix --syntax scss \"src/css/**/*.scss\"",
        "js-lint": "eslint src/js/",
        "js-lint-fix": "eslint --fix src/js/",
        "lint": "npm-run-all css-lint js-lint",
        "lint-fix": "npm-run-all css-lint-fix js-lint-fix",
        "update-git-hooks": "npx simple-git-hooks",
        "update:packages": "npm i -g npm-check-updates && npm-check-updates -u && npm install",
        "precommit": "npm run lint",
        "prepush": "npm run lint"
    },
    "gulp_config": {
        "variables": {
            "template_name": "playerbook",
            "src": "./src",
            "dist": "./dist",
            "deploy": "./deploy"
        },
        "browserSync": {
            "proxy": "127.0.0.1:8000",
            "open": true,
            "notify": false
        },
        "php": {
            "base": "{dist}",
            "port": 8000,
            "keepalive": true,
            "stdio": "ignore"
        },
        "static": [
            {
                "from": "{src}/static/**",
                "to": "{dist}"
            },
            {
                "from": [
                    "node_modules/*bootstrap/dist/js/bootstrap.min.js",
                    "node_modules/*bootstrap/dist/js/bootstrap.min.js.map",
                    "node_modules/*bootstrap/dist/css/bootstrap.min.css",
                    "node_modules/*bootstrap/dist/css/bootstrap.min.css.map",
                    "node_modules/*bootstrap-validator/dist/validator.min.js",
                    "node_modules/*bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js",
                    "node_modules/*popper.js/dist/umd/popper.min.js",
                    "node_modules/*popper.js/dist/umd/popper.min.js.map",
                    "node_modules/*scrollreveal/dist/scrollreveal.min.js",
                    "node_modules/*animejs/lib/anime.min.js",
                    "node_modules/*swiper/swiper-bundle.min.js",
                    "node_modules/*swiper/swiper-bundle.min.js.map",
                    "node_modules/*swiper/swiper-bundle.min.css",
                    "node_modules/*ion-rangeslider/js/ion.rangeSlider.min.js",
                    "node_modules/@fancyapps/*fancybox/dist/jquery.fancybox.min.css",
                    "node_modules/@fancyapps/*fancybox/dist/jquery.fancybox.min.js",
                    "node_modules/*imagesloaded/imagesloaded.pkgd.min.js",
                    "node_modules/*isotope-layout/dist/isotope.pkgd.min.js",
                    "node_modules/*jarallax/dist/jarallax.css",
                    "node_modules/*jarallax/dist/jarallax.min.js",
                    "node_modules/*jarallax/dist/jarallax.min.js.map",
                    "node_modules/*jarallax/dist/jarallax-element.min.js",
                    "node_modules/*jarallax/dist/jarallax-element.min.js.map",
                    "node_modules/*jarallax/dist/jarallax-video.min.js",
                    "node_modules/*jarallax/dist/jarallax-video.min.js.map",
                    "node_modules/*jquery/dist/jquery.min.js",
                    "node_modules/*jquery-countdown/dist/jquery.countdown.min.js",
                    "node_modules/*moment/min/moment.min.js",
                    "node_modules/*moment-timezone/builds/moment-timezone-with-data.min.js",
                    "node_modules/*object-fit-images/dist/ofi.min.js"
                ],
                "to": "{dist}/assets/vendor"
            }
        ],
        "js": {
            "from": "{src}/js/*.js",
            "to": "{dist}/assets/js"
        },
        "css": {
            "from": "{src}/css/**/*.{sass,scss,css}",
            "to": "{dist}/assets/css",
            "sass": {
                "indentWidth": 4,
                "outputStyle": "expanded"
            }
        },
        "html": {
            "from": "{src}/html/*.html",
            "to": "{dist}",
            "dataFile": "{src}/html/data/global.json",
            "renderPath": "{src}/html",
            "htmltidy": {
                "doctype": "html5",
                "hideComments": false,
                "indent": true
            }
        },
        "images": {
            "from": "{src}/images/**/*.{jpg,jpeg,png,gif,svg,pdf}",
            "to": "{dist}/assets/images"
        },
        "watch": [
            {
                "task": "static",
                "from": "{src}/static/**/*"
            },
            {
                "task": "images",
                "from": "{src}/images/**/*.{jpg,jpeg,png,gif,svg}"
            },
            {
                "task": "html",
                "from": "{src}/html/**/*.{html,json}"
            },
            {
                "task": "css",
                "from": "{src}/css/**/*.{sass,scss,css}"
            },
            {
                "task": "js",
                "from": "{src}/js/**/*.js"
            }
        ],
        "deploy": {
            "zip": {
                "from": "{deploy}/{template_name}",
                "to": "{deploy}/{template_name}.zip"
            },
            "static": [
                {
                    "from": [
                        "{src}/*README.html"
                    ],
                    "to": "{deploy}"
                },
                {
                    "from": [
                        "gulpfile.babel.js",
                        "babel.config.js",
                        ".eslintrc.json",
                        ".gitignore",
                        ".stylelintrc.json",
                        "package.json"
                    ],
                    "to": "{deploy}/{template_name}"
                },
                {
                    "from": [
                        "{src}/*css/**/*",
                        "{src}/*js/**/*",
                        "{src}/*html/**/*",
                        "{src}/*static/**/*",
                        "{src}/*images/**/*"
                    ],
                    "to": "{deploy}/{template_name}/src"
                }
            ],
            "imagePlaceholders": {
                "from": "{{deploy}/{template_name}/src/images/**/*.{jpg,jpeg,png,gif},{deploy}/{template_name}/dist/assets/images/**/*.{jpg,jpeg,png,gif}}"
            }
        }
    },
    "dependencies": {
        "@fancyapps/fancybox": "^3.5.7",
        "animejs": "^3.2.0",
        "bootstrap": "4.6.0",
        "bootstrap-touchspin": "^4.3.0",
        "bootstrap-validator": "^0.11.9",
        "countup.js": "^2.0.8",
        "imagesloaded": "^4.1.4",
        "ion-rangeslider": "^2.3.1",
        "isotope-layout": "^3.0.6",
        "jarallax": "^1.12.7",
        "jquery": "^3.6.0",
        "jquery-countdown": "^2.2.0",
        "moment": "^2.29.1",
        "moment-timezone": "^0.5.33",
        "object-fit-images": "^3.2.4",
        "popper.js": "^1.16.1",
        "raf-schd": "^4.0.3",
        "scrollreveal": "^4.0.9",
        "swiper": "^6.8.2",
        "throttle-debounce": "^3.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@babel/register": "^7.15.3",
        "babel-loader": "^8.2.2",
        "browser-sync": "^2.27.5",
        "del": "^6.0.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-plugin-import": "^2.24.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.24.0",
        "glob": "^7.1.7",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^8.0.0",
        "gulp-cdnizer": "^2.2.0",
        "gulp-change": "^1.0.2",
        "gulp-changed": "^4.0.3",
        "gulp-clean-css": "^4.3.0",
        "gulp-connect-php": "^1.0.3",
        "gulp-data": "^1.3.1",
        "gulp-header": "^2.0.9",
        "gulp-htmltidy": "^0.2.4",
        "gulp-if": "^3.0.0",
        "gulp-javascript-obfuscator": "^1.1.6",
        "gulp-load-plugins": "^2.0.7",
        "gulp-nunjucks-render": "^2.2.3",
        "gulp-plumber": "^1.2.1",
        "gulp-prettify": "^0.5.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.0.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-uglify": "^3.0.2",
        "gulp-vinyl-zip": "^2.5.0",
        "gulp-watch": "^5.0.1",
        "install": "^0.13.0",
        "jimp": "^0.16.1",
        "micromatch": "^4.0.4",
        "node-sass": "^6.0.1",
        "npm-run-all": "^4.1.5",
        "simple-git-hooks": "^2.6.1",
        "string-template": "^1.0.0",
        "stylelint": "^13.13.1",
        "stylelint-config-recommended-scss": "^4.3.0",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-order": "^4.1.0",
        "stylelint-scss": "^3.20.1",
        "vinyl-named": "^1.1.0",
        "webpack-stream": "^6.1.2"
    }
}